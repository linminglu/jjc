<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

	<class 
	    name="com.myt.model.BaseData" 
	    table="base_data">
		<cache usage="read-write" /> 
	    <id
	        name="bid"
	        type="java.lang.Integer"
	        column="b_id">
	        <generator class="identity"/>
	    </id>
	    <property
	        name="type"
	        type="java.lang.String"
	        column="type"
	    />
	    <property
	        name="title"
	        type="java.lang.String"
	        column="title"
	    />
	    <property
	        name="value"
	        type="java.lang.String"
	        column="value"
	    />
      	<property
            name="sort"
            column="sort"
            type="java.lang.String" 
	    />
	</class>
</hibernate-mapping>
