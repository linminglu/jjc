<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
	"http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">
<struts-config>
	<!-- ==================================== Data Sources      -->
  	<data-sources>
  	</data-sources>
  	<!-- ==================================== Form Beans        -->
  	<form-beans>
		<form-bean name="sfPk10Form" type="com.gf.sfpk10.web.form.SfPk10Form"/>
  	</form-beans>
  	<!-- ==================================== Global Exceptions -->
  	<global-exceptions>
		<exception key="error" type="java.lang.Exception" handler="com.ram.exception.ActionExceptionHandler" />
  	</global-exceptions>
  	<!-- ==================================== Global Forwards    -->
  	<global-forwards>
	 	<forward name="exception" path="/_exception.jsp" />
  	</global-forwards>
  	<!-- ==================================== Action Mappings    -->
  	<action-mappings>
  		<action 
			path="/sfPk10Action" 
    		type="com.gf.sfpk10.web.action.SfPk10Action" 
    		name="sfPk10Form" 
    		scope="request" 
    		parameter="method"
    		validate="false"
    	>
	   	<forward name="init" path="/sfPk10SessionList.jsp"/> 
	   	<forward name="betList" path="/sfPk10Betlist.jsp"/>
	   	<forward name="betManager" path="/sfPk10BetManager.jsp"/>
	   	<forward name="betDetailManager" path="/sfPk10BetDetailManager.jsp"/>
	   	</action>
    </action-mappings>
</struts-config>
